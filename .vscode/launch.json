    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dev with Yarn",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "dev"
            ],
            "env": {
                "ELECTRON_ARGS": "['--inspect-brk=9229']",
                "NODE_ARGS": "['--inspect-brk=9229']"
            },
            "port": 9229,
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}